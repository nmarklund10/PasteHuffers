<!DOCTYPE html>
<html>
<head>
  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  
  <title>PasteHuffer</title>
  <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/dojo/1.10.4/dijit/themes/claro/claro.css" />
  <script src="https://ajax.googleapis.com/ajax/libs/dojo/1.10.4/dojo/dojo.js"
            data-dojo-config="parseOnLoad: true, async: false"></script>
  <script>
    require(['dojo/dom',
            'dojo/dom-construct',
            'dojo/parser', 
            "dijit/layout/AccordionContainer", 
            "dijit/layout/ContentPane",
            "dojo/request",
            "dijit/Dialog",
            "dijit/layout/TabContainer",
            "dojox/grid/DataGrid",
            "dojo/data/ItemFileWriteStore",
            'dijit/form/TextBox',
            'dijit/form/DateTextBox',
            'dijit/form/TimeTextBox',
            'dijit/form/Button',
            'dojox/form/Uploader', 
            'dijit/form/Select'
        ], function (dom, domConstruct,parser, AccordionContainer, ContentPane, request, dialog, TabContainer, DataGrid, ItemFileWriteStore) {
            window.dom = dom;
            window.domConstruct = domConstruct;
            window.parser = parser;
            window.AccordionContainer = AccordionContainer;
            window.TabContainer = TabContainer;
            window.ContentPane = ContentPane;
            window.request = request;
            window.DojoDialog = dialog;
            window.DataGrid = DataGrid;
            window.ItemFileWriteStore = ItemFileWriteStore;
            if( typeof window.setup !== "undefined")
            {
              window.setup();
            }
        });
  </script>
</head>
<body class="claro">

<%= yield %>

</body>
</html>
